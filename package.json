{
  "name": "belmont-seo-lab",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest",
    "e2e": "playwright test",
    "e2e:smoke": "playwright test tests/e2e --project=chromium -g 'Smoke Tests for Tools'",
    "performance": "lighthouse http://localhost:3000/apps/dashboard --output json --output-path=./tests/performance-results.json --only-categories=performance,pwa,accessibility --chrome-flags='--headless'",
    "performance:quick": "lighthouse http://localhost:3000/apps/dashboard --only-categories=performance --preset=desktop --chrome-flags='--headless' --output=json --output-path=./tests/performance-results.json --max-wait-for-load=30000",
    "load-test": "artillery run tests/performance/load-test.yml",
    "load-test:quick": "artillery quick --rate 5 --duration 15 http://localhost:3000/apps/dashboard",
    "stress-test": "artillery quick --payload 500 --rate 10 --duration 60 http://localhost:3000/apps/dashboard",
    "performance:full": "npm run performance && npm run load-test",
    "accessibility": "playwright test tests/accessibility/ --headed",
    "accessibility:ci": "playwright test tests/accessibility/ --project=chromium --reporter=json > accessibility-report.json",
    "accessibility:quick": "playwright test tests/accessibility/accessibility.spec.ts --project=chromium -g 'Full Accessibility Audit Report' --reporter=dot",
    "compliance": "npm run accessibility:ci && node scripts/compliance-summary.js",
    "visual": "playwright test -c tests/visual/playwright.config.ts --headed --update-snapshots",
    "visual:ci": "playwright test -c tests/visual/playwright.config.ts --project=visual-chromium --update-snapshots",
    "visual:test": "playwright test -c tests/visual/playwright.config.ts --project=visual-chromium",
    "visual:diff": "playwright test -c tests/visual/playwright.config.ts --project=visual-chromium --reporter=html",
    "visual:smoke": "playwright test -c tests/visual/playwright.config.ts tests/visual/visual-regression.spec.ts --project=visual-chromium -g 'Dashboard KPI Cards - Data Load Flow' --reporter=dot",
    "visual:baseline": "node scripts/baseline-manager.js generate",
    "visual:clean": "node scripts/baseline-manager.js clean",
    "visual:compare": "node scripts/baseline-manager.js compare",
    "ci:smoke": "npm run -s build && npm run -s e2e:smoke && npm run -s accessibility:quick && npm run -s visual:smoke && npm run -s performance:quick"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.542.0",
    "next": "^14.2.32",
    "openai": "^5.18.1",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "qrcode": "^1.5.4",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "vitest": "^3.2.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^5.0.2",
    "artillery": "^2.0.24",
    "autoprefixer": "^10.0.1",
    "axe-core": "^4.10.3",
    "axios": "^1.11.0",
    "eslint": "^8",
    "eslint-config-next": "^14.0.0",
    "lighthouse": "^12.8.2",
    "postcss": "^8",
    "sharp": "^0.34.3",
    "sprintf-js": "^1.1.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
