# Local development example â€” copy to .env.local and fill values as needed
# Do NOT commit .env.local; secrets must remain local or in your hosting provider's env settings

# --- Public site configuration ---
# Base URL of the local/dev site (no trailing slash)
NEXT_PUBLIC_SITE_BASE=http://localhost:3000

# Controls robots/sitemap. Keep false locally; set true in production
NEXT_PUBLIC_ALLOW_INDEXING=false

# --- AI / OpenAI configuration ---
# Set this in your local .env.local or hosting provider secrets; do not commit real keys
OPENAI_API_KEY=

# Default model used by AI routes if none specified by client
OPENAI_DEFAULT_MODEL=gpt-5-mini-2025-08-07

# Rate limit configuration for AI endpoints
AI_RATE_PER_MINUTE=30
AI_RATE_PER_DAY=100

# --- Optional: Upstash Redis (for durable rate limiting) ---
# If unset, in-memory fallback is used (per-process only)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --- Testing / CI helpers ---
# Visual tests: whether to update snapshots on this run
UPDATE_SNAPSHOTS=false

# Base URL for Playwright tests; defaults to localhost if unset
PLAYWRIGHT_BASE_URL=http://localhost:3000
