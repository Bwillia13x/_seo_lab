# Public site configuration
NEXT_PUBLIC_SITE_BASE=https://staging.seo.example.com
NEXT_PUBLIC_ALLOW_INDEXING=false

# AI / OpenAI configuration (set via secrets manager)
OPENAI_API_KEY=
OPENAI_DEFAULT_MODEL=gpt-5-mini-2025-08-07
AI_RATE_PER_MINUTE=30
AI_RATE_PER_DAY=100

# Optional: Upstash Redis for durable rate limiting
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Analytics (GA4 Measurement Protocol)
GA4_MEASUREMENT_ID=
GA4_API_SECRET=

# Analytics (GA4 Data API for reports)
# Numeric Property ID from GA4 Admin -> Property Settings
GA4_PROPERTY_ID=
# Paste full Service Account JSON (the service account must have access to the GA4 property)
GOOGLE_APPLICATION_CREDENTIALS_JSON=

# Optional GA4 settings for service-level reporting
# Name of the GA4 event parameter that stores the service (e.g., "service")
GA4_SERVICE_PARAM_NAME=
# Optional: Set to your specific conversion event name to filter (e.g., "purchase" or "booking_completed")
GA4_CONVERSION_EVENT_NAME=

# Optional: Messaging/Payments/Maps integrations
RESEND_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_MESSAGING_SERVICE_SID=
STRIPE_SECRET_KEY=
GOOGLE_MAPS_API_KEY=

# Testing helpers
UPDATE_SNAPSHOTS=false
PLAYWRIGHT_BASE_URL=https://staging.seo.example.com

